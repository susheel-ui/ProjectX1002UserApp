<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Scrollable Section -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_3d"
                tools:ignore="ContentDescription" />

            <!-- Company Name -->
            <TextView
                android:id="@+id/tvCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SRS"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="26sp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center" />

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For any requirements regarding support and services, please feel free to contact us at the number below."
                android:textColor="#757575"
                android:textSize="16sp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="16dp" />

            <!-- Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="28dp"
                android:layout_gravity="center" />

            <!-- Phone Number -->
            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 8299685759"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:textSize="22sp"
                android:autoLink="phone"
                android:textColorLink="#2196F3"
                android:layout_marginTop="24dp"
                android:layout_gravity="center" />

            <!-- Call Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCallNow"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="Call Now"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:backgroundTint="@color/Primary_Color"
                android:layout_marginTop="20dp"
                app:cornerRadius="14dp"
                app:icon="@android:drawable/ic_menu_call"
                app:iconGravity="textStart"
                app:iconPadding="12dp" />

            <!-- Footer -->
            <TextView
                android:id="@+id/tvFooter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â© 2025 All Rights Reserved"
                android:textSize="12sp"
                android:textColor="#BDBDBD"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
